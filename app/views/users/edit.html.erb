<% provide(:title, "Edit #{@user.first_name}") %>
<h1>Edit <%= @user.first_name %></h1>
<% if policy(@user).edit? %>
  <%= simple_form_for @user do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :role, collection: User.roles.keys %>
    <% unless @user.superadmin? %>
      <%= f.input :college_id, label: 'College', collection: College.all, default: @user.college %>
    <% end %>
    <%= f.submit 'Save' %>
  <% end %>
<% end %>
<%= render 'cancel_button' %>
