<% provide(:title, @user.full_name) %>
<h1 class="user-name"><%= @user.full_name %></h1>
<dl>
<% if policy(@user).draw_info? %>
    <dt>Draw</dt>
    <dd><%= @user.draw.name %></dd>
    <dt>Housing Intent</dt>
    <dd class="user-intent"><%= @user.intent.humanize %></dd>
<% end %>
<% unless current_user.student? %>
  <dt>Role</dt>
  <dd class="user-role"><%= @user.role.humanize %></dd>
<% end %>
  <dt>Email</dt>
  <dd class="user-email"><%= @user.email %></dd>
</dl>
<% if policy(@user).edit? %>
  <div>
    <%= link_to 'Edit', edit_user_path(@user), class: 'button secondary' %>
    <% if policy(@user).destroy? %>
      <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'button alert' %>
    <% end %>
    <% if policy(:masquerade).new? %>
      <%= link_to 'Masquerade', new_user_masquerade_path(@user), class: 'button', data: { confirm: "Are you sure you want to masquerade as this user? This will mean that all actions you perform will be as if you are that user." } %>
    <% end %>
  </div>
<% end %>
<% if policy(@user).edit_password? %>
  <div>
    <%= link_to 'Change Password', edit_password_user_path(@user), class: 'button' %>
  </div>
<% end %>
<% if policy(User).index? %>
  <%= link_to 'View all users', users_path %>
<% end %>
