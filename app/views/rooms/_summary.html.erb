<table aria-label="Room Summary", class="room-summary-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Type</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% rooms.each do |room| %>
      <% if policy(room).show? %>
        <tr id="room-<%= room.id %>", class="room-edit-form">
          <th scope="row" data-role="room-number"><%= render partial: 'rooms/number_edit_form', locals: { room: room } %></th>
          <td data-role="room-type"><%= render partial: 'rooms/type_edit_form', locals: { room: room } %></td>
          <td class="actions" data-role="room-actions">
            <%= link_to 'View', room_path(room), class: 'button' %>
            <% if policy(room).destroy? %>
              <%= link_to 'Delete', room_path(room), method: :delete, data: { confirm: 'Are you sure you want to delete that room?' },
                          class: 'button alert' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
