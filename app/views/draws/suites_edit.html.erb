<h1 class="draw-name"><%= @draw.name %> - Edit Suites</h1>
<%= simple_form_for @suites_update, url: suites_update_draw_path(@draw), method: :patch do |f| %>
  <% @suite_sizes.each do |size| %>
    <div class="suites-fields" id="suites-fields-<%= size %>">
      <h4><%= headerize_size(size) %></h4>
      <%= render 'suite_edit_fields', f: f, size: size, current_suites: @current_suites[size],
                                      drawless_suites: @drawless_suites[size],
                                      drawn_suites: @drawn_suites[size], draw: @draw %>
  </div>
  <hr />
<% end %>
<%= f.submit 'Update' %>
<% end %>
<%= link_to 'Cancel', suite_summary_draw_path(@draw) %>
